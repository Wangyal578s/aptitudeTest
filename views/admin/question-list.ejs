<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Questions - Admin Panel</title>
  <link rel="stylesheet" href="/css/admin.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="admin-wrapper">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <i class="fas fa-graduation-cap"></i>
          <span>AptitudePro+</span>
        </div>
      </div>
      
      <nav class="sidebar-nav">
        <ul>
          <li class="nav-item">
            <a href="/admin/dashboard" class="nav-link">
              <i class="fas fa-tachometer-alt"></i>
              <span>Dashboard</span>
            </a>
          </li>
          <li class="nav-item active">
            <a href="/admin/questions" class="nav-link">
              <i class="fas fa-list-ul"></i>
              <span>Manage Questions</span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/add-question" class="nav-link">
              <i class="fas fa-plus-circle"></i>
              <span>Add Question</span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/logout" class="nav-link">
              <i class="fas fa-sign-out-alt"></i>
              <span>Logout</span>
            </a>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
      <!-- Header -->
      <header class="admin-header">
        <div class="header-left">
          <h1 class="page-title">
            <i class="fas fa-list-ul"></i>
            Manage Questions
          </h1>
          <p class="page-subtitle">Edit, delete, or organize your questions</p>
        </div>
        <div class="header-right">
          <a href="/admin/add-question" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Add New Question
          </a>
        </div>
      </header>

      <!-- Flash Messages -->
      <% if (success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i>
          <%= success %>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
      <% } %>

      <!-- Questions Table -->
      <section class="table-section">
        <% if (questions.length === 0) { %>
          <div class="empty-state">
            <div class="empty-icon">
              <i class="fas fa-question-circle"></i>
            </div>
            <h3>No Questions Found</h3>
            <p>You haven't created any questions yet. Start by adding your first question.</p>
            <a href="/admin/add-question" class="btn btn-primary">
              <i class="fas fa-plus"></i>
              Add Your First Question
            </a>
          </div>
        <% } else { %>
          <div class="table-container">
            <table class="questions-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Category</th>
                  <th>Question</th>
                  <th>Correct Answer</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% questions.forEach(q => { %>
                  <tr>
                    <td class="id-cell">#<%= q.id %></td>
                    <td class="category-cell">
                      <span class="category-badge">
                        <%= q.Category ? q.Category.name : 'N/A' %>
                      </span>
                    </td>
                    <td class="question-cell">
                      <div class="question-preview">
                        <%= q.question.length > 100 ? q.question.substring(0, 100) + '...' : q.question %>
                      </div>
                    </td>
                    <td class="answer-cell">
                      <span class="answer-badge">
                        <%= q.correctAnswer %>
                      </span>
                    </td>
                    <td class="actions-cell">
                      <div class="action-buttons">
                        <a href="/admin/questions/<%= q.id %>/edit" class="btn btn-sm btn-edit" title="Edit Question">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form action="/admin/questions/<%= q.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirmDelete('<%= q.question.substring(0, 50) %>...')">
                          <button type="submit" class="btn btn-sm btn-delete" title="Delete Question">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>
    </main>
  </div>

  <script>
    function confirmDelete(questionPreview) {
      return confirm(`Are you sure you want to delete this question?\n\n"${questionPreview}"\n\nThis action cannot be undone.`);
    }
  </script>
</body>
</html>
